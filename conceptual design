DATABASE IMPLEMENTATION AND QUERYING USING MYSQL
Create database hospital;

-- PATIENTS table
CREATE TABLE PATIENTS (
    PATIENT_ID INT PRIMARY KEY,
    FIRST_NAME VARCHAR(30) NOT NULL,
    MIDDLE_NAME VARCHAR(30) NOT NULL,
    LAST_NAME VARCHAR(30) NOT NULL,
    DATE_OF_BIRTH DATE NOT NULL,
    GENDER CHAR(1) NOT NULL CHECK (GENDER IN ('M', 'F')),
    CONTACT_INFORMATION VARCHAR(200) NOT NULL,
    MEDICAL_HISTORY TEXT,	
    ADDRESS VARCHAR (40) NOT NULL
);

-- EMPLOYEES table
CREATE TABLE EMPLOYEES (
    EMPLOYEE_ID VARCHAR(10) PRIMARY KEY,
    FIRST_NAME VARCHAR(50) NOT NULL,
    MIDDLE_NAME VARCHAR(30) NOT NULL,
    LAST_NAME VARCHAR(50) NOT NULL,
    SPECIALTY VARCHAR(50) NOT NULL,
    LICENSE_NUMBER VARCHAR(20) UNIQUE NOT NULL,
    CONTACT_INFORMATION VARCHAR(200) NOT NULL,
    CREDENTIALS VARCHAR(100)
);

-- ROOMS table
CREATE TABLE ROOMS (
    ROOM_ID INT NOT NULL PRIMARY KEY,
    ROOM_TYPE VARCHAR(20) NOT NULL,
    ROOM_CAPACITY INT NOT NULL,
    ASSIGNED_DOCTOR_ID VARCHAR(10),
    FOREIGN KEY (ASSIGNED_DOCTOR_ID) REFERENCES EMPLOYEES(EMPLOYEE_ID)
);

-- PRESCRIPTIONS 
CREATE TABLE PRESCRIPTIONS (
    PRESCRIPTION_ID INT NOT NULL PRIMARY KEY,
    MEDICATION_NAME VARCHAR(100) NOT NULL,
    DOCTOR_ID VARCHAR(10) NOT NULL, 
    FOREIGN KEY (DOCTOR_ID) REFERENCES EMPLOYEES(EMPLOYEE_ID)
);

-- TESTS 
CREATE TABLE TESTS (
    TEST_ID INT PRIMARY KEY,
    TEST_NAME VARCHAR(100) NOT NULL,
    ORDERED_BY VARCHAR(10) NOT NULL,
    FOREIGN KEY (ORDERED_BY) REFERENCES EMPLOYEES(EMPLOYEE_ID)
);

-- MEDICAL_RECORDS 
CREATE TABLE MEDICAL_RECORDS (
    RECORD_ID INT PRIMARY KEY,
    RECORD_DETAILS TEXT NOT NULL,
    RECORDED_BY VARCHAR(10) NOT NULL,
    FOREIGN KEY (RECORDED_BY) REFERENCES EMPLOYEES(EMPLOYEE_ID)
);

-- PATIENT_HAS 
CREATE TABLE PATIENT_HAS (
    PATIENT_ID INT NOT NULL,
    RECORD_ID INT NOT NULL,
    PRIMARY KEY (PATIENT_ID, RECORD_ID),
    FOREIGN KEY (PATIENT_ID) REFERENCES PATIENTS(PATIENT_ID),
    FOREIGN KEY (RECORD_ID) REFERENCES MEDICAL_RECORDS(RECORD_ID)
);

-- PATIENT_RECEIVES 
CREATE TABLE PATIENT_RECEIVES (
    PATIENT_ID INT NOT NULL,
    PRESCRIPTION_ID INT NOT NULL,
    PRIMARY KEY (PATIENT_ID, PRESCRIPTION_ID),
    FOREIGN KEY (PATIENT_ID) REFERENCES PATIENTS(PATIENT_ID),
    FOREIGN KEY (PRESCRIPTION_ID) REFERENCES PRESCRIPTIONS(PRESCRIPTION_ID)
);

-- PATIENT_UNDERGOES 
CREATE TABLE PATIENT_UNDERGOES (
    PATIENT_ID INT NOT NULL,
    TEST_ID INT NOT NULL,
    PRIMARY KEY (PATIENT_ID, TEST_ID),
    FOREIGN KEY (PATIENT_ID) REFERENCES PATIENTS(PATIENT_ID),
    FOREIGN KEY (TEST_ID) REFERENCES TESTS(TEST_ID) 
);

-- ASSIGNED 
CREATE TABLE ASSIGNED (
    PATIENT_ID INT NOT NULL,
    ROOM_ID INT NOT NULL,
    PRIMARY KEY (PATIENT_ID, ROOM_ID),
    FOREIGN KEY (PATIENT_ID) REFERENCES PATIENTS(PATIENT_ID),
    FOREIGN KEY (ROOM_ID) REFERENCES ROOMS(ROOM_ID)
